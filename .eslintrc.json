{
    "extends": "airbnb",
    "plugins": ["react", "import"],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "__DEVELOPMENT__": true,
        "__USE_MOCK__": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "import/no-unresolved": ["error", {"ignore": ["reactDOM"]}],
        "arrow-body-style": 0,
        "comma-dangle": ["error", "always-multiline"],
        "consistent-return": 0,
        "curly": ["error", "all"],
        "default-case": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "max-len": ["error", 120],
        "no-else-return": 0,
        "no-implicit-coercion": 0,
        "no-redeclare": 0,
        "no-shadow": 0,
        "no-unused-expressions": 0,
        "no-underscore-dangle": 0,
        "object-curly-spacing": 0,
        "no-param-reassign": 0,
        "no-case-declarations": 0,
        "no-use-before-define": 0,
        "prefer-const": 0
    }
}
